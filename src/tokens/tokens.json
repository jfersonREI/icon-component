{
  "color": {
    "primary": "#007bff",
    "secondary": "#6c757d",
    "background": "#ffffff",
    "text": {
      "primary": "#212529",
      "secondary": "#6c757d"
    }
  },
  "typography": {
    "font-family": {
      "base": "Roboto, sans-serif"
    },
    "font-size": {
      "body": "16px",
      "heading": "24px"
    }
  },
  "spacing": {
    "small": "8px",
    "medium": "16px",
    "large": "24px"
  },
  "border": {
    "width": {
      "thin": "1px",
      "thick": "2px"
    },
    "radius": {
      "small": "4px",
      "medium": "8px"
    }
  },
  "icon": {
    "size": {
      "small": "16px",
      "medium": "24px",
      "large": "32px",
      "xlarge": "48px"
    },
    "color": {
      "default": "{color.text.primary}",
      "accent": "{color.primary}",
      "secondary": "{color.secondary}"
    }
  }
}
